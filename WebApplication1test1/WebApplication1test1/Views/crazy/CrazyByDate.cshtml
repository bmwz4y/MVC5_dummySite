@using WebApplication1test1.Models
@model IEnumerable<CrazyByDate>

@{
    ViewBag.Title = "CrazyByDate";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Crazies)
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crazies)
                @*@Html.Label("crazies) items should be here", new { @class = "label label-warning"})*@
                @*@Html.DisplayText(modelItem => item.Crazies)*@
            </td>
        </tr>
}
</table>
@Html.ActionLink("Back to normal crazy list", "ShowAll")

