@using System.Web.Mvc.Html
<!DOCTYPE html>
<html>

@*this is a custom layout for lesson 59*@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("https://code.jquery.com/jquery-3.2.1.min.js")
    @Styles.Render("~/Content/css")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js") @*added on lesson 77 or later *@
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js") @*added on lesson 77 or later*@
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <!-- this is the look of the three stripes as a button for small screens-->
            </button>
            @Html.ActionLink("CUSTOM", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("E", "E", "Class1")</li>
                <li>@Html.ActionLink("E_Grid", "EPartial", "Class1")</li>
                <li>@Html.ActionLink("Crazies", "ShowAll", "Crazy")</li>
                <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                <li>@Html.ActionLink("TestLogging", "TestLogging", "Employees")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    <div style="font-family: arial; font-size: 2em; ">
        @* ReSharper disable Html.Obsolete *@
        <u>
            @* ReSharper restore Html.Obsolete *@
            @if (IsSectionDefined("News"))
            {
                @RenderSection("News", required: false) // lesson 61 added this section and corresponding code and html
            }
            else
            {
                for (int i = 0; i < 4; i++)
                {
                    @:News strip !EMPTY!
                }
            }
            @* ReSharper disable Html.Obsolete *@
        </u>
        @* ReSharper restore Html.Obsolete *@
    </div>

    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @RenderSection("copyWrite", required: true) - YEH</p>
    </footer>
</div>